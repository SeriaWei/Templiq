<!-- 可可秀画廊 -->
{% header %}
<style>
.section-coakox {
    padding: 4em 0;
    background-color: #f8f9fa;
}

.section-coakox .gallery-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1em;
}

.section-coakox .gallery-header {
    text-align: center;
    margin-bottom: 3em;
}

.section-coakox .gallery-title {
    font-size: 2.5em;
    color: #2c3e50;
    margin-bottom: 0.5em;
}

.section-coakox .gallery-description {
    font-size: 1.2em;
    color: #666;
    max-width: 800px;
    margin: 0 auto;
}

.section-coakox .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2em;
}

.section-coakox .gallery-item {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.section-coakox .gallery-item:hover {
    transform: translateY(-5px);
}

.section-coakox .gallery-image {
    width: 100%;
    height: 280px;
    object-fit: cover;
}

.section-coakox .gallery-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5em;
    background: linear-gradient(transparent, rgba(0,0,0,0.8));
    color: white;
}

.section-coakox .gallery-item-title {
    font-size: 1.3em;
    margin-bottom: 0.5em;
}

.section-coakox .gallery-item-description {
    font-size: 1em;
    opacity: 0.9;
}

@media (max-width: 768px) {
    .section-coakox {
        padding: 3em 0;
    }

    .section-coakox .gallery-title {
        font-size: 2em;
    }

    .section-coakox .gallery-description {
        font-size: 1.1em;
    }

    .section-coakox .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5em;
    }
}
</style>
{% endheader %}

<section class="section-coakox">
    <div class="gallery-container">
        <div class="gallery-header">
            <h2 property="true" data-property="Heading" method="text" class="gallery-title">{{this.Model.Heading}}</h2>
            <p property="true" data-property="Summary" method="text" class="gallery-description">{{this.Model.Summary}}</p>
        </div>
        <div class="gallery-grid">
            {% for item in this.Model.GalleryItems %}
            <div class="gallery-item">
                <img property="true" data-property="GalleryItems[{{forloop.index | minus:1}}].Src" method="attr" para="src" src="{% url item.Src %}" alt="{{item.Title}}" class="gallery-image">
                <div class="gallery-content">
                    <h3 property="true" data-property="GalleryItems[{{forloop.index | minus:1}}].Title" method="text" class="gallery-item-title">{{item.Title}}</h3>
                    <p property="true" data-property="GalleryItems[{{forloop.index | minus:1}}].Description" method="text" class="gallery-item-description">{{item.Description}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>