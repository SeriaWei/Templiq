<!-- 功能亮点展示 -->
{% header %}
<style>
.section-m9wcn0fr {
  padding: 2em 0;
  background: #fff;
  {% if this.Model.primary_color %}
  --primary-color: {{this.Model.primary_color}};
  {% endif %}
}

.section-m9wcn0fr .container-custom {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.section-m9wcn0fr .section-header {
  text-align: center;
  margin-bottom: 3em;
  position: relative;
}

.section-m9wcn0fr .section-title {
  font-size: 2.5em;
  margin-bottom: 0.5em;
  color: #333;
}

.section-m9wcn0fr .section-subtitle {
  font-size: 1.1em;
  color: #666;
  max-width: 600px;
  margin: 0 auto 1em;
}

.section-m9wcn0fr .decorative-line {
  width: 60px;
  height: 3px;
  background: var(--primary-color, #007bff);
  margin: 0 auto;
}

.section-m9wcn0fr .features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25px;
}

.section-m9wcn0fr .feature-card {
  background: #fff;
  padding: 2em;
  border-radius: 10px;
  box-shadow: 0 2px 15px rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  position: relative;
}

.section-m9wcn0fr .feature-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

.section-m9wcn0fr .feature-icon {
  width: 70px;
  height: 70px;
  margin-bottom: 1.5em;
  transition: transform 0.3s ease;
}

.section-m9wcn0fr .feature-card:hover .feature-icon {
  transform: scale(1.1);
}

.section-m9wcn0fr .feature-title {
  font-size: 1.3em;
  font-weight: 600;
  margin-bottom: 0.8em;
  color: var(--primary-color, #007bff);
}

.section-m9wcn0fr .feature-description {
  font-size: 1em;
  line-height: 1.6;
  color: #666;
}

.section-m9wcn0fr .feature-badge {
  position: absolute;
  top: 1em;
  right: 1em;
  background: var(--primary-color, #007bff);
  color: white;
  padding: 0.3em 0.8em;
  border-radius: 15px;
  font-size: 0.9em;
}

@media (max-width: 768px) {
  .section-m9wcn0fr .features-grid {
    grid-template-columns: 1fr;
  }
  
  .section-m9wcn0fr .section-header {
    text-align: left;
    padding: 0 1em;
  }
  
  .section-m9wcn0fr .decorative-line {
    margin: 0;
  }
  
  .section-m9wcn0fr .section-subtitle {
    margin: 0 0 1em;
  }
  
  .section-m9wcn0fr .feature-card:hover {
    transform: none;
  }
  
  .section-m9wcn0fr .feature-card:active {
    background: #f8f9fa;
  }
}
</style>
{% endheader %}

<section class="section-m9wcn0fr">
  <div class="container-custom">
    {% if this.Model.title %}
    <div class="section-header">
      <h2 property="true" data-property="title" method="text" class="section-title">{{this.Model.title}}</h2>
      {% if this.Model.subtitle %}
      <p property="true" data-property="subtitle" method="text" class="section-subtitle">{{this.Model.subtitle}}</p>
      {% endif %}
      <div class="decorative-line"></div>
    </div>
    {% endif %}

    <div class="features-grid">
      {% for feature in this.Model.features %}
      <div class="feature-card">
        {% if feature.icon %}
        <img property="true" data-property="features[{{forloop.index | minus:1}}].icon" method="attr" para="src" src="{% url feature.icon %}" alt="{{feature.title}}" class="feature-icon">
        {% endif %}
        <h3 property="true" data-property="features[{{forloop.index | minus:1}}].title" method="text" class="feature-title">{{feature.title}}</h3>
        <p property="true" data-property="features[{{forloop.index | minus:1}}].description" method="text" class="feature-description">{{feature.description}}</p>
        {% if feature.badge %}
        <span property="true" data-property="features[{{forloop.index | minus:1}}].badge" method="text" class="feature-badge">{{feature.badge}}</span>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>