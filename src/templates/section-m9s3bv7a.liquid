<!-- 产品特性横幅 -->
{% header %}
<style>
.section-m9s3bv7a {
  background-color: #f8f9fa;
  width: 100%;
}
.section-m9s3bv7a .features-title {
  text-align: center;
  margin-bottom: 2em;
  padding: 1em 0 0;
}
.section-m9s3bv7a .features-title h2 {
  font-size: 2em;
  color: #333;
  margin-bottom: 0.5em;
}
.section-m9s3bv7a .features-title p {
  font-size: 1.1em;
  color: #666;
}
.section-m9s3bv7a .features-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.section-m9s3bv7a .feature-item {
  flex: 1 1 25%;
  min-width: 250px;
  position: relative;
  overflow: hidden;
  background-color: #000;
}
.section-m9s3bv7a .feature-link {
  display: block;
  height: 100%;
  width: 100%;
  text-decoration: none;
  color: inherit;
}
.section-m9s3bv7a .feature-image {
  position: relative;
  padding-top: 66.67%; /* 3:2 aspect ratio */
  overflow: hidden;
}
.section-m9s3bv7a .feature-image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease, opacity 0.3s;
}
.section-m9s3bv7a .feature-item:hover .feature-image img {
  transform: scale(1.05);
  opacity: 0.9;
}
.section-m9s3bv7a .feature-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1em;
  background: rgba(0,0,0,0.7);
  color: #fff;
  margin: 0;
  font-size: 1.2em;
  transition: background-color 0.3s;
}
.section-m9s3bv7a .feature-item:hover .feature-title {
  background: rgba(0,0,0,0.85);
}

@media (max-width: 768px) {
  .section-m9s3bv7a .feature-item {
    flex: 1 1 50%;
  }
}

@media (max-width: 480px) {
  .section-m9s3bv7a .feature-item {
    flex: 1 1 100%;
  }
}
</style>
{% endheader %}

<section class="section-m9s3bv7a">
  {% if this.Model.title or this.Model.subtitle %}
  <div class="features-title">
    {% if this.Model.title %}
    <h2 property="true" data-property="title" method="text">{{this.Model.title}}</h2>
    {% endif %}
    {% if this.Model.subtitle %}
    <p property="true" data-property="subtitle" method="text">{{this.Model.subtitle}}</p>
    {% endif %}
  </div>
  {% endif %}
  
  <div class="features-grid">
    {% for item in this.Model.features %}
    <div class="feature-item">
      {% if item.link_url %}
      <a property="true" data-property="features[{{forloop.index | minus:1}}].link_url" method="attr" para="href" href="{% url item.link_url %}" class="feature-link">
      {% endif %}
        <div class="feature-image">
          {% if item.image %}
          <img property="true" data-property="features[{{forloop.index | minus:1}}].image" method="attr" para="src" src="{% url item.image %}" alt="{{item.title}}">
          {% endif %}
        </div>
        {% if item.title %}
        <h3 class="feature-title" property="true" data-property="features[{{forloop.index | minus:1}}].title" method="text">{{item.title}}</h3>
        {% endif %}
      {% if item.link_url %}
      </a>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</section>

{% footer %}
<script type="text/javascript">
  // Initialize any interactive elements if needed
</script>
{% endfooter %}