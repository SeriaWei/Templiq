{% header %}
<style>
.section-bfwtmx {
    padding: 4em 0;
    background-color: #f8f9fa;
}

.section-bfwtmx .section-content {
    max-width: 1140px;
    margin: 0 auto;
    padding-right: 15px;
    padding-left: 15px;
}

.section-bfwtmx .product-image {
    width: 100%;
    height: auto;
    border-radius: 0.5em;
    box-shadow: 0 0.5em 1em rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.section-bfwtmx .product-image:hover {
    transform: scale(1.02);
}

.section-bfwtmx .product-title {
    font-size: 2.5em;
    margin-bottom: 0.5em;
    color: #2c3e50;
}

.section-bfwtmx .product-description {
    font-size: 1.1em;
    line-height: 1.6;
    color: #34495e;
    margin-bottom: 1.5em;
}

.section-bfwtmx .product-button {
    display: inline-block;
    padding: 0.8em 2em;
    background-color: #3498db;
    color: white;
    text-decoration: none;
    border-radius: 2em;
    transition: background-color 0.3s ease;
}

.section-bfwtmx .product-button:hover {
    background-color: #2980b9;
}

@media (max-width: 768px) {
    .section-bfwtmx .product-title {
        font-size: 2em;
        text-align: center;
    }
    
    .section-bfwtmx .product-description {
        text-align: center;
    }
    
    .section-bfwtmx .button-container {
        text-align: center;
    }
    
    .section-bfwtmx .product-image {
        margin-bottom: 2em;
    }
}
</style>
{% endheader %}

<section class="section-bfwtmx">
    <div class="section-content">
        <div class="row">
            <div class="col-md-6">
                <img property="true" data-property="ProductImage" method="attr" para="src" 
                     src="{% url this.Model.ProductImage %}" 
                     class="product-image" alt="Product Image">
            </div>
            <div class="col-md-6">
                <h2 property="true" data-property="ProductTitle" method="text" 
                    class="product-title">{{this.Model.ProductTitle}}</h2>
                <p property="true" data-property="ProductDescription" method="text" 
                   class="product-description">{{this.Model.ProductDescription}}</p>
                <div class="button-container">
                    <a property="true" data-property="ButtonLink" method="attr" para="href" 
                       href="{{this.Model.ButtonLink}}" class="product-button">
                        <span property="true" data-property="ButtonText" method="text">
                            {{this.Model.ButtonText}}
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>