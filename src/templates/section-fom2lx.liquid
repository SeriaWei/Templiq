{% header %}
<style>
.section-fom2lx {
  padding: 80px 0;
  background-color: #f8f9fa;
}

.section-fom2lx .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.section-fom2lx .grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}

.section-fom2lx .content {
  padding-right: 40px;
}

.section-fom2lx .title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 20px;
  color: #2d3436;
}

.section-fom2lx .description {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #636e72;
  margin-bottom: 30px;
}

.section-fom2lx .cta-button {
  display: inline-block;
  padding: 15px 30px;
  background-color: #0984e3;
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-weight: 600;
  transition: background-color 0.3s ease;
}

.section-fom2lx .cta-button:hover {
  background-color: #0069d9;
}

.section-fom2lx .image-wrapper {
  position: relative;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
}

.section-fom2lx .image-wrapper img {
  width: 100%;
  height: auto;
  display: block;
}

@media (max-width: 768px) {
  .section-fom2lx .grid {
    grid-template-columns: 1fr;
  }
  
  .section-fom2lx .content {
    padding-right: 0;
    text-align: center;
  }
  
  .section-fom2lx .image-wrapper {
    margin-top: 30px;
  }
}
</style>
{% endheader %}

<section class="section-fom2lx">
  <div class="container">
    <div class="grid">
      <div class="content">
        <h2 class="title" property="true" data-property="Title" method="text">{{this.Model.Title}}</h2>
        <p class="description" property="true" data-property="Description" method="text">{{this.Model.Description}}</p>
        <a href="#" class="cta-button" property="true" data-property="ButtonText" method="text">{{this.Model.ButtonText}}</a>
      </div>
      <div class="image-wrapper">
        <img property="true" data-property="Image" method="attr" para="src" src="{% url this.Model.Image %}" alt="创新产品展示">
      </div>
    </div>
  </div>
</section>