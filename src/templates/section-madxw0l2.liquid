<!-- 合作伙伴展示 -->
{% header %}
<style>
.section-madxw0l2 {
  background-color: #0f0f0f;
  color: #f5f5f5;
  padding: 4rem 1rem;
}
.section-madxw0l2 .content {
  max-width: 1170px;
  margin: 0 auto;
}
.section-madxw0l2 .title {
  text-align: center;
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 4rem;
}
.section-madxw0l2 .logo-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}
.section-madxw0l2 .logo-cell {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 3rem 2rem;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  transition: background-color 0.3s ease;
}
.section-madxw0l2 .logo-cell:hover {
  background-color: rgba(255, 255, 255, 0.05);
}
.section-madxw0l2 .logo-cell:nth-child(4n) {
  border-right: none;
}
.section-madxw0l2 .logo-content {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.section-madxw0l2 .logo-content svg {
  width: 32px;
  height: 32px;
}
.section-madxw0l2 .logo-text {
  font-size: 1.25rem;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
}
@media screen and (max-width: 1024px) {
  .section-madxw0l2 {
    padding: 3rem 1rem;
  }
  .section-madxw0l2 .title {
    font-size: 1.75rem;
    margin-bottom: 3rem;
  }
}
@media screen and (max-width: 768px) {
  .section-madxw0l2 .logo-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  .section-madxw0l2 .logo-cell:nth-child(2n) {
    border-right: none;
  }
  .section-madxw0l2 .logo-cell {
    padding: 2rem 1rem;
  }
  .section-madxw0l2 .logo-content svg {
    width: 28px;
    height: 28px;
  }
  .section-madxw0l2 .logo-text {
    font-size: 1.125rem;
  }
}
@media screen and (max-width: 480px) {
  .section-madxw0l2 .logo-grid {
    grid-template-columns: 1fr;
  }
  .section-madxw0l2 .logo-cell {
    border-right: none;
  }
  .section-madxw0l2 .title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }
}
</style>
{% endheader %}

<section class="section-madxw0l2">
  <div class="content">
    {% if this.Model.title %}
    <h2 class="title" property="true" data-property="title" method="text">{{this.Model.title}}</h2>
    {% endif %}
    <div class="logo-grid">
      {% for partner in this.Model.partners %}
      <div class="logo-cell">
        <div class="logo-content">
          {{partner.icon | raw}}
          <span class="logo-text" property="true" data-property="partners[{{forloop.index | minus:1}}].name" method="text">{{partner.name}}</span>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
