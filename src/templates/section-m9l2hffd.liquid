<!-- 产品展示三列 -->
{% header %}
<style>
.section-m9l2hffd {
  font-family: -apple-system, BlinkMacSystemFont, "San Francisco", "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #1d1d1f;
  background-color: #ffffff;
  overflow: hidden;
}

.section-m9l2hffd .apple-container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 22px;
}

.section-m9l2hffd .headline {
  font-size: 2.5em;
  font-weight: 600;
  text-align: center;
  margin-bottom: 0.8em;
  letter-spacing: -0.02em;
}

.section-m9l2hffd .sub-headline {
  font-size: 1.4em;
  font-weight: 400;
  text-align: center;
  max-width: 700px;
  margin: 0 auto 3em;
  color: #86868b;
  letter-spacing: 0.005em;
  line-height: 1.5;
}

.section-m9l2hffd .product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30px;
}

.section-m9l2hffd .product-item {
  flex: 0 0 calc(33.333% - 20px);
  min-width: 280px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40px;
}

.section-m9l2hffd .product-image {
  width: 100%;
  height: 220px;
  object-fit: cover;
  object-position: center;
  border-radius: 8px;
  margin-bottom: 20px;
  transition: transform 0.3s ease;
}

.section-m9l2hffd .product-title {
  font-size: 1.5em;
  font-weight: 500;
  margin-bottom: 10px;
  text-align: center;
}

.section-m9l2hffd .product-description {
  text-align: center;
  color: #86868b;
  font-size: 1em;
  line-height: 1.5;
  margin-bottom: 20px;
}

.section-m9l2hffd .product-link {
  color: #0066cc;
  font-size: 1em;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
}

.section-m9l2hffd .product-link:hover {
  text-decoration: underline;
}

.section-m9l2hffd .product-link:after {
  content: "›";
  font-size: 1.2em;
  margin-left: 5px;
}

@media only screen and (max-width: 768px) {
  .section-m9l2hffd {
    padding: 60px 0;
  }
  
  .section-m9l2hffd .headline {
    font-size: 2em;
  }
  
  .section-m9l2hffd .sub-headline {
    font-size: 1.2em;
  }
  
  .section-m9l2hffd .product-item {
    flex: 0 0 100%;
  }
}
</style>
{% endheader %}

<section class="section-m9l2hffd">
  <div class="apple-container">
    {% if this.Model.headline %}
    <h2 property="true" data-property="headline" method="text" class="headline">{{ this.Model.headline }}</h2>
    {% endif %}
    
    {% if this.Model.sub_headline %}
    <p property="true" data-property="sub_headline" method="text" class="sub-headline">{{ this.Model.sub_headline }}</p>
    {% endif %}
    
    {% if this.Model.product_items %}
    <div class="product-grid">
      {% for item in this.Model.product_items %}
      <div class="product-item">
        {% if item.image_src %}
        <img property="true" data-property="product_items[{{forloop.index | minus:1}}].image_src" method="attr" para="src" src="{% url item.image_src %}" alt="{% if item.title %}{{ item.title }}{% else %}Product image{% endif %}" class="product-image">
        {% endif %}
        
        {% if item.title %}
        <h3 property="true" data-property="product_items[{{forloop.index | minus:1}}].title" method="text" class="product-title">{{ item.title }}</h3>
        {% endif %}
        
        {% if item.description %}
        <p property="true" data-property="product_items[{{forloop.index | minus:1}}].description" method="text" class="product-description">{{ item.description }}</p>
        {% endif %}
        
        {% if item.link_text and item.link_url %}
        <a property="true" data-property="product_items[{{forloop.index | minus:1}}].link_url" method="attr" para="href" href="{% url item.link_url %}" class="product-link">
          <span property="true" data-property="product_items[{{forloop.index | minus:1}}].link_text" method="text">{{ item.link_text }}</span>
        </a>
        {% endif %}
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>