{% header %}
<style>
.section-88rz2g {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.section-88rz2g .hero-content {
  position: relative;
  z-index: 2;
  color: #fff;
  padding: 2rem;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.section-88rz2g .hero-heading {
  font-size: 3.5rem;
  margin-bottom: 1.5rem;
}

.section-88rz2g .hero-description {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.section-88rz2g .hero-cta {
  display: inline-block;
  padding: 1rem 2rem;
  background-color: #fff;
  color: #000;
  text-decoration: none;
  border-radius: 30px;
  font-weight: bold;
  transition: all 0.3s ease;
}

.section-88rz2g .hero-cta:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.section-88rz2g .hero-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

@media (max-width: 768px) {
  .section-88rz2g .hero-heading {
    font-size: 2.5rem;
  }
  
  .section-88rz2g .hero-description {
    font-size: 1.1rem;
  }
}
</style>
{% endheader %}

<section class="section-88rz2g">
  <img property="true" data-property="BackgroundImage" method="attr" para="src" 
       src="{% url this.Model.BackgroundImage %}" 
       class="hero-image" 
       alt="Hero background"/>
  
  <div class="hero-content">
    <h1 property="true" data-property="Heading" method="text" class="hero-heading">
      {{this.Model.Heading}}
    </h1>
    
    <div property="true" data-property="Summary" method="text" class="hero-description">
      {{this.Model.Summary}}
    </div>
    
    <a property="true" data-property="CtaLink" method="attr" para="href" 
       href="{{this.Model.CtaLink}}" 
       class="hero-cta">
      <span property="true" data-property="CtaText" method="text">
        {{this.Model.CtaText}}
      </span>
    </a>
  </div>
</section>