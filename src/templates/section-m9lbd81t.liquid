{% header %}
<style>
.section-m9lbd81t {
    padding: 60px 0;
    background-color: #f8f9fa;
}

.section-m9lbd81t .grid-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
}

.section-m9lbd81t .grid-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    margin-bottom: 30px;
}

.section-m9lbd81t .grid-item {
    position: relative;
    height: 300px;
    overflow: hidden;
    border-radius: 8px;
    transition: transform 0.3s ease;
}

.section-m9lbd81t .grid-item:hover {
    transform: translateY(-5px);
}

.section-m9lbd81t .grid-item-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: 1;
}

.section-m9lbd81t .grid-item-content {
    position: relative;
    z-index: 2;
    height: 100%;
    padding: 30px;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.7));
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.section-m9lbd81t .grid-item-title {
    font-size: 1.5em;
    margin-bottom: 0.5em;
    font-weight: bold;
}

.section-m9lbd81t .grid-item-desc {
    font-size: 1em;
    line-height: 1.4;
    opacity: 0.9;
}

@media (max-width: 992px) {
    .section-m9lbd81t .grid-row {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 576px) {
    .section-m9lbd81t .grid-row {
        grid-template-columns: 1fr;
    }
    
    .section-m9lbd81t .grid-item {
        height: 250px;
    }
}
</style>
{% endheader %}

<section class="section-m9lbd81t">
    <div class="grid-container">
        <div class="grid-row">
            {% for item in this.Model.grid_items %}
            <div class="grid-item">
                <div class="grid-item-bg" style="background-image: url('{% url item.background_image %}');"></div>
                <div class="grid-item-content">
                    <h3 class="grid-item-title" property="true" data-property="grid_items[{{forloop.index | minus:1}}].title" method="text">{{item.title}}</h3>
                    <p class="grid-item-desc" property="true" data-property="grid_items[{{forloop.index | minus:1}}].description" method="text">{{item.description}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>