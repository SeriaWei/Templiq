{% header %}
<style>
.section-cuvvnv {
  padding: 4em 0;
  background-color: #f8f9fa;
}

.section-cuvvnv .gallery-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1em;
}

.section-cuvvnv .gallery-header {
  text-align: center;
  margin-bottom: 2em;
}

.section-cuvvnv .gallery-title {
  font-size: 2.5em;
  color: #2c3e50;
  margin-bottom: 0.5em;
}

.section-cuvvnv .gallery-description {
  font-size: 1.2em;
  color: #666;
  max-width: 800px;
  margin: 0 auto;
}

.section-cuvvnv .gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5em;
}

.section-cuvvnv .gallery-item {
  position: relative;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.section-cuvvnv .gallery-item:hover {
  transform: translateY(-5px);
}

.section-cuvvnv .gallery-image {
  width: 100%;
  height: 280px;
  object-fit: cover;
}

.section-cuvvnv .gallery-caption {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1em;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 1em;
}

@media (max-width: 768px) {
  .section-cuvvnv {
    padding: 3em 0;
  }

  .section-cuvvnv .gallery-title {
    font-size: 2em;
  }

  .section-cuvvnv .gallery-description {
    font-size: 1.1em;
  }
}

@media (max-width: 576px) {
  .section-cuvvnv {
    padding: 2em 0;
  }

  .section-cuvvnv .gallery-grid {
    grid-template-columns: 1fr;
  }

  .section-cuvvnv .gallery-title {
    font-size: 1.8em;
  }
}
</style>
{% endheader %}

<section class="section-cuvvnv">
  <div class="gallery-container">
    <div class="gallery-header">
      <h2 property="true" data-property="Heading" method="text" class="gallery-title">{{this.Model.Heading}}</h2>
      <div property="true" data-property="Summary" method="text" class="gallery-description">{{this.Model.Summary}}</div>
    </div>
    <div class="gallery-grid">
      {% for item in this.Model.GalleryItems %}
      <div class="gallery-item">
        <img property="true" data-property="GalleryItems[{{forloop.index | minus:1}}].Src" method="attr" para="src" src="{% url item.Src %}" class="gallery-image" alt="{{item.Caption}}" />
        <div property="true" data-property="GalleryItems[{{forloop.index | minus:1}}].Caption" method="text" class="gallery-caption">{{item.Caption}}</div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>