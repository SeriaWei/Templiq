<!-- 产品展示 -->
{% header %}
<style>
.section-magrb74k {
    padding: 20px;
    background-color: #fff;
}

.section-magrb74k .content {
    max-width: 1170px;
    margin: 0 auto;
}

.section-magrb74k .header {
    text-align: center;
    margin-bottom: 40px;
    margin-top: 20px;
}

.section-magrb74k .main-title {
    font-size: 2em;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333;
}

.section-magrb74k .sub-title {
    font-size: 1.1em;
    color: #666;
    margin-bottom: 30px;
}

.section-magrb74k .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    width: 100%;
}

.section-magrb74k .product-item {
    height: 280px;
    overflow: hidden;
    position: relative;
    border-radius: 4px;
    cursor: pointer;
}

.section-magrb74k .product-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.section-magrb74k .product-item:hover img {
    transform: scale(1.05);
}

.section-magrb74k .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.4s ease;
    padding: 20px;
    text-align: center;
}

.section-magrb74k .product-item:hover .overlay {
    opacity: 1;
}

.section-magrb74k .overlay h3 {
    font-size: 1.4em;
    margin-bottom: 15px;
    transform: translateY(20px);
    opacity: 0;
    transition: transform 0.5s ease, opacity 0.5s ease;
}

.section-magrb74k .overlay p {
    margin: 5px 0;
    font-size: 1em;
    transform: translateY(20px);
    opacity: 0;
    transition: transform 0.5s ease, opacity 0.5s ease;
    transition-delay: 0.1s;
}

.section-magrb74k .product-item:hover .overlay h3,
.section-magrb74k .product-item:hover .overlay p {
    transform: translateY(0);
    opacity: 1;
}

@media (max-width: 768px) {
    .section-magrb74k .product-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .section-magrb74k .main-title {
        font-size: 1.5em;
    }
    
    .section-magrb74k .sub-title {
        font-size: 1em;
    }
}

@media (max-width: 480px) {
    .section-magrb74k .product-grid {
        grid-template-columns: 1fr;
    }
}
</style>
{% endheader %}

<section class="section-magrb74k">
    <div class="content">
        <div class="header">
            {% if this.Model.title %}
            <h1 class="main-title" property="true" data-property="title" method="text">{{this.Model.title}}</h1>
            {% endif %}
            {% if this.Model.subtitle %}
            <p class="sub-title" property="true" data-property="subtitle" method="text">{{this.Model.subtitle}}</p>
            {% endif %}
        </div>
        
        {% if this.Model.products %}
        <div class="product-grid">
            {% for product in this.Model.products %}
            <div class="product-item">
                <img src="{% url product.image %}" alt="{{product.title}}">
                <div class="overlay">
                    <h3>{{product.title}}</h3>
                    {% for feature in product.features %}
                    <p>{{feature.text}}</p>
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
