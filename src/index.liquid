<style>
  .container {
    display: flex;
    gap: 20px;
    margin-top: 20px;
  }
  .editor, .preview {
    flex: 1;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 15px;
  }
  textarea {
    width: 100%;
    height: 300px;
    border: 1px solid #ccc;
    padding: 10px;
    font-family: monospace;
  }
  button {
    background-color: #2a69ac;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 10px;
  }
  button:hover {
    background-color: #1e4e8c;
  }
  .examples {
    margin-top: 30px;
  }
  .example {
    background-color: #f5f5f5;
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 5px;
  }
  .preview {
    background: #f9f9f9;
  }
</style>

<h1>Templiq - Liquid模板引擎</h1>

<div class="examples">
  <h2>示例模板</h2>
  {% if examples and examples.size > 0 %}
    {% for example in examples %}
      <div class="example">
        <h3>{{ example.title }}</h3>
        <p>查看 <a href="/preview/{{ example.name }}">{{ example.description }}</a></p>
      </div>
    {% endfor %}
  {% else %}
    <div class="example">
      <p>目前没有可用的示例</p>
    </div>
  {% endif %}
</div> 